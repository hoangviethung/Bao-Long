block var

doctype html

html(lang="en")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		meta(name="viewport" content="width=device-width, user-scalable=yes, minimum-scale=1.0, maximum-scale=1.0")
		link(rel="stylesheet", href="./css/core.min.css")
		link(rel="stylesheet", href="./css/main.min.css")
	body
		block loading
		block header
			include _header
		block banner,breadcrumb
		main
			block main
			#js-page-verify(class=bodyClass hidden)
		block footer
			include _footer
		#hot_line
			a.hot_line--link(href="tel:(028) 38 239 249")
				.hot_line--icon
					img.svg.lazyload.blur-up(data-src="./assets/icons/hot-line-fixed.svg")
				.hot_line--text.cl-vang.ta-c (028) 38 239 249
		script(type="text/javascript", src="./js/core.min.js")
		script(type="text/javascript", src="./js/main.min.js")
		block scripts